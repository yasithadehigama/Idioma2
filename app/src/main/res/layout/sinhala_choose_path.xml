<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Your Path "
        android:id="@+id/textView5"
        android:layout_marginTop="58dp"
        android:textColor="#FF0000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Basic"
        android:id="@+id/btn_basic"
        android:layout_gravity="center_vertical"
        android:layout_above="@+id/btn_intermediate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Intermediate"
        android:id="@+id/btn_intermediate"
        android:layout_gravity="center_vertical"

        android:layout_above="@+id/btn_expert"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Expert"
        android:id="@+id/btn_expert"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview_pickpath"
        android:src="@drawable/pickyour_path"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />
        android:layout_marginTop="93dp" />

</RelativeLayout>
