<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Your Path "
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic"
        android:id="@+id/btn_basic"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="75dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intermediate"
        android:id="@+id/btn_intermediate"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/btn_basic"
        android:layout_alignLeft="@+id/btn_basic"
        android:layout_alignStart="@+id/btn_basic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expert"
        android:id="@+id/btn_expert"
        android:layout_below="@+id/btn_intermediate"
        android:layout_alignLeft="@+id/btn_intermediate"
        android:layout_alignStart="@+id/btn_intermediate"
        android:layout_marginTop="55dp" />
</RelativeLayout>
