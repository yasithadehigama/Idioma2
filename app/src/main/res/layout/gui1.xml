<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Learn Yourself Forever "
        android:id="@+id/textView"
        android:layout_marginTop="94dp"
        android:textColor="#FF0000"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I Want to Learn "
        android:id="@+id/textView2"
        android:layout_marginTop="53dp"
        android:textColor="#FF0000"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sinhala"
        android:src="@drawable/btn_sinhala"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_english"
        android:src="@drawable/btn_english"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/btn_sinhala"
        android:layout_alignRight="@+id/btn_sinhala"
        android:layout_alignEnd="@+id/btn_sinhala" />


</RelativeLayout>
